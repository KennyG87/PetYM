<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:background="@drawable/bgcolor"
    tools:context="petym.android.com.petym.NewsDetailActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="222dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:baseline="10sp"
        app:civ_border_color="#FF000000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#cccccc"
        />

    <TextView
        android:id="@+id/dateItemNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/detail_MS"
        android:layout_marginTop="6dp"
        android:text="Medium dateItemNo"
        android:paddingLeft="@dimen/detail_PF"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/dateItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/detail_MS"
        android:layout_marginTop="@dimen/detail_MT"
        android:paddingLeft="@dimen/detail_PF"
        android:text="Medium dateItemPrice"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666" />
    <TextView
        android:id="@+id/sellerNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/detail_MS"
        android:layout_marginTop="@dimen/detail_MT"
        android:paddingLeft="@dimen/detail_PF"
        android:text="Medium sellerNo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666" />
    <TextView
        android:id="@+id/dateItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/detail_MS"
        android:layout_marginTop="@dimen/detail_MT"
        android:paddingLeft="@dimen/detail_PF"
        android:text="Medium dateItemTitle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666" />
    <TextView
        android:id="@+id/dateMeetingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/detail_MS"
        android:layout_marginTop="@dimen/detail_MT"
        android:paddingLeft="@dimen/detail_PF"
        android:text="Medium dateMeetingTime"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666" />
    <TextView
        android:id="@+id/petNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/detail_MS"
        android:layout_marginTop="@dimen/detail_MT"
        android:paddingLeft="@dimen/detail_PF"
        android:text="Medium petNo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/restListNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/detail_MS"
        android:layout_marginTop="@dimen/detail_MT"
        android:paddingLeft="@dimen/detail_PF"
        android:text="Medium restuarantListNo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/hasMate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/detail_MS"
        android:layout_marginTop="@dimen/detail_MT"
        android:paddingLeft="@dimen/detail_PF"
        android:text="Medium hasMate"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666" />
    <TextView
        android:id="@+id/dateItemLocate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/detail_MS"
        android:layout_marginTop="@dimen/detail_MT"
        android:paddingLeft="@dimen/detail_PF"
        android:text="Medium dateItemLocate"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonQRcode"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/buttonbuy"
            android:layout_alignBottom="@+id/buttonbuy"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"

            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="#f8405b"
            android:text="QR Code"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:theme="@style/RedButtonStyle" />

        <Button
            android:id="@+id/buttonbuy"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="#f8405b"
            android:text="購買"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:theme="@style/RedButtonStyle" />

    </RelativeLayout>


</LinearLayout>
