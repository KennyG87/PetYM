<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:background="@drawable/bgcolor"
    tools:context="petym.android.com.petym.NewsDetailActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:baseline="10sp"
        android:layout_weight="0.31" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/memName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/detail_MS"
        android:layout_marginTop="6dp"
        android:paddingLeft="30dp"
        android:text="memName"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/memBday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/detail_MS"
        android:layout_marginTop="6dp"
        android:text="memBday"
        android:textSize="25sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666" />
    <Button
        android:id="@+id/editMem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ffffff"

        android:text="編輯"
        android:layout_gravity="right"
        android:gravity="center"/>

</LinearLayout>

    <TextView
        android:id="@+id/petKind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/detail_MS"
        android:layout_marginTop="@dimen/detail_MT"
        android:paddingLeft="@dimen/detail_PF"
        android:text="寵物: 貓咪 petKind"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666" />


    <TextView
        android:id="@+id/constellation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/detail_MS"
        android:layout_marginTop="@dimen/detail_MT"
        android:paddingLeft="@dimen/detail_PF"
        android:text="星座:摩羯座 constellation"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666" />
    <TextView
        android:id="@+id/memPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/detail_MS"
        android:layout_marginTop="@dimen/detail_MT"
        android:paddingLeft="@dimen/detail_PF"
        android:text="點數:300000 pt"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666" />
    <TextView
        android:id="@+id/memSelfintro"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/detail_MS"
        android:layout_marginTop="@dimen/detail_MT"
        android:paddingLeft="20dp"
        android:text="描述自己:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666"
        android:layout_weight="0.45" />


</LinearLayout>
